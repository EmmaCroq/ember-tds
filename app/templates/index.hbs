{{page-title "Index"}}
<h1 class="panel-body">Accueil</h1>

  <form>
    <fieldset>
      <legend>Page de connexion</legend>

      <div class="form-group">
        <label for="email">Identifiant</label>
        <Input @value={{ @model.email }} type="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="jeandupont@bloup.com"/>
        <small id="aideIdentifiant" class="form-text">*L'identifiant doit Ãªtre une adresse mail</small>
      </div>
      <div class="form-group">
        <label for="password">Mot de passe</label>
        <Input @value={{ @model.password }} type="password" class="form-control" id="password" placeholder="Mot de passe"/>
      </div>
      <button {{ action "login" @model }} type="submit" id="envoie" class="btn btn-primary">Se connecter <div class='glyphicon glyphicon-circle-arrow-right'></div></button>
    </fieldset>
    <br>
  </form>
{{outlet}}